body {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.login_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login_box .avatar-wrapper {
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
}
.login_box .nick-input {
  font-size: 32rpx;
}
.login_box .headerPhotoBox {
  border-radius: 50%;
  overflow: hidden;
  width: 126rpx;
  height: 126rpx;
  margin-top: 250rpx;
  margin-bottom: 26rpx;
}
.login_box .login_btn {
  margin-top: 120rpx;
  background: red;
  width: 80%;
  color: white;
  font-size: 30rpx;
  line-height: 88rpx;
}
.login_box .login_btn.green {
  background-color: #52a936;
}
.login_box .tip {
  color: #9b9b9b;
  font-size: 24rpx;
  position: fixed;
  bottom: 100rpx;
  text-align: center;
}
.login_box .varsions {
  color: #9b9b9b;
  font-size: 24rpx;
  position: fixed;
  bottom: 50rpx;
  text-align: center;
}
.login_box .cancle {
  text-align: center;
  margin-top: 40rpx;
  color: red;
}
.login_box .cancle.green {
  color: #52a936;
}